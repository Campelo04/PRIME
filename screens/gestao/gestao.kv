<Btn>:
    #font_name:app.fonte_nome
    font_size:sp(13)
    background_color:.3,0,0
    background_normal:''
    valign:'center'
    halign:'center' 
    color:1,1,1

<Gestao>:
    name:"gestao"
    id:gestao
    FloatLayout:
        canvas:
            Color:
                rgb:.9,.9,1
            Rectangle:
                size:self.size
                pos:self.pos
        BoxLayout:
            pos_hint:{'center_x':.5,'center_y':.5}
            size_hint:None,None
            height:500
            width:600
            spacing:10
            BoxLayout:
                orientation:"vertical"
                spacing:10
                Btn:
                    font_size:app.dg_font_size_title
                    color:1,1,1
                    text:"Pedidos"
                    original:0,.7,0
                    on_release: app.root.ids.Manager.current = "pedidos"
                Btn:
                    font_size: app.dg_font_size_title
                    color:1,1,1
                    text:"Clientes"
                    original:.9,.7,0
                    on_release: app.root.ids.Manager.current = "clientes"
                Btn:
                    font_size:app.dg_font_size_title
                    color:1,1,1
                    text:"Funcionários"
                    original:0,0,.7
                    on_release: 
                        app.root.ids.Manager.current = "funcionarios"
                        app.root.ids.Funcionarios.show()
            BoxLayout:
                orientation:"vertical"
                spacing:10
                Btn:
                    font_size:app.dg_font_size_title
                    color:1,1,1
                    text:"Estoque"
                    original:.7,0,0
                    on_release: app.root.ids.Manager.current = "estoque"
                Btn:
                    font_size:app.dg_font_size_title
                    color:1,1,1
                    text:"Relatórios"
                    original:0,.5,.5
                    on_release: app.root.ids.Manager.current = "relatorios"
                BoxLayout:
                    spacing:10
                    Btn:
                        font_size:app.dg_font_size_title
                        color:1,1,1
                        text:"Configurações"
                        original:.8,.8,0
                        on_release: app.root.ids.Manager.current = "configuracoes"
                    Btn:
                        font_size:app.dg_font_size_title
                        color:1,1,1
                        text:"Bloquear"
                        original:.8,0,.9
                        on_release:app.root.ids.Login.bloquear()
            