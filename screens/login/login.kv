<Btn>:
    #font_name:app.fonte_nome
    font_size:sp(13)
    background_color:.3,0,0
    background_normal:''
    valign:'center'
    halign:'center' 
    color:1,1,1

<Login>:

    FloatLayout:
        id:logo_login
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                pos:self.pos
                size:self.size
                source:'Images/DG_WHITE_BACKGROUND.png'

        AnchorLayout: 
            anchor_x:'center' 
            anchor_y:'center'
            size_hint:None,None
            height: root.height*.6
            width: root.height*.43
            pos_hint:{'center_x':.5,'center_y':.5}
            canvas:   
                Color:
                    rgb:1,1,1
                Rectangle:
                    size:self.width,self.height-10
                    pos:self.x,self.y-5
                    source:'Images\\v.png'
            BoxLayout:
                orientation:'vertical'
                #size_hint_y:.7
                spacing:10
                padding:30
                InfoLabel:
                    text:'Usuário'
                    font_size:app.dg_font_size_subtitle
                    
                    size_hint_y:None
                    valign:'bottom'
                    height:30
                InfoTextInput:
                    focus:True
                    text:''
                    hint_text:"Informe aqui o seu usuário"
                    hint_text_color:0,0,0,.5
                    id:user_login
                    size_hint_y:None
                    font_size:sp(app.dg_font_size_text)
                    height:dp(33)
                    multiline:False
                    write_tab:False
                    on_text_validate:root.ids.senha_login.focus=True
                InfoLabel:
                    text:'Senha'
                    valign:'bottom'
                    font_size:sp(app.dg_font_size_subtitle)
                    size_hint_y:None
                    height:30               
                InfoTextInput:
                    size_hint_y:None
                    height:33
                    password:True
                    id:senha_login
                    hint_text:"Informe aqui a sua senha"
                    text:''
                    font_size:sp(app.dg_font_size_text)
                    multiline:False
                    write_tab:False
                    on_text_validate:root.autenticar(user_login.text,senha_login.text);app.root.ids.Manager.transition.direction='up'
                    #focus_next:
                FloatLayout:
                    size_hint:None,None
                    height:0
                    width:0
                    Btn_yey:
                        canvas:
                            Color:
                                rgb:1,1,1,1
                            Rectangle:
                                size:self.width*.8,self.height*.60
                                pos:self.x+self.width*.1,self.y+self.height*.18
                                source: self.image
                        original: 1,1,1,0
                        color_original: .35,0,0,0
                        size_hint:None,None
                        width:root.ids.senha_login.height-4
                        height:root.ids.senha_login.height-4
                        pos:root.ids.senha_login.x+root.ids.senha_login.width*.88,root.ids.senha_login.y+2
                        color:0,0,0
                        on_press:root.check_password()
                        on_release:root.check_password()  
                        background_color:0,0,0,0
                        background_normal:""      
                Btn:
                    size_hint:None,None
                    height:40
                    width:60
                    pos_hint:{'center_x':.5,'center_y':0}
                    text:'Entrar'
                    font_size:sp(app.dg_font_size_subtitle)
                    on_press: 
                        root.autenticar(user_login.text,senha_login.text),
                    on_release:
                        root.ids.resp_login.color = 1,1,1,1

                        #app.root.Login(user_login.text,senha_login.text)
                        #Manager.transition.direction='up'
                    #on_press: 
                    #    app.root.Login(user_login.text,senha_login.text)
                    #    Manager.transition.direction='up'
                MensageLabel:
                    id:resp_login
                    font_size:sp(app.dg_font_size_text)
                    text:'Olá, faça login para prosseguir.'
                    halign:'center'
                    size_hint_y:None
                    height:60
